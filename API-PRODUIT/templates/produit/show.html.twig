{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ produit.name }}</td>
            </tr>
            <tr>
                <th>Classe</th>
                <td>{{ produit.classe }}</td>
            </tr>
            <tr>
                <th>Date_expiration</th>
                <td>{{ produit.dateExpiration ? produit.dateExpiration|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Disponibilite</th>
                <td>{{ produit.disponibilite ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Id_ordonnance</th>
                <td>{{ produit.idOrdonnance }}</td>
            </tr>
            <tr>
                <th>Id_proprietaire</th>
                <td>{{ produit.idProprietaire }}</td>
            </tr>
            <tr>
                <th>Id_produit_specifique</th>
                <td>{{ produit.idProduitSpecifique }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('produit_index') }}">back to list</a>

    <a href="{{ path('produit_edit', {'id': produit.id}) }}">edit</a>

    {{ include('produit/_delete_form.html.twig') }}
{% endblock %}
