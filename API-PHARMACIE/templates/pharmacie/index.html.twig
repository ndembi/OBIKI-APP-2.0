{% extends 'base.html.twig' %}

{% block title %}Pharmacie index{% endblock %}

{% block body %}
    <h1>Pharmacie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Id_ville</th>
                <th>Id_pharmacien</th>
                <th>Id_proprietaire</th>
                <th>Name</th>
                <th>Address</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pharmacie in pharmacies %}
            <tr>
                <td>{{ pharmacie.id }}</td>
                <td>{{ pharmacie.idVille }}</td>
                <td>{{ pharmacie.idPharmacien }}</td>
                <td>{{ pharmacie.idProprietaire }}</td>
                <td>{{ pharmacie.name }}</td>
                <td>{{ pharmacie.address }}</td>
                <td>
                    <a href="{{ path('pharmacie_show', {'id': pharmacie.id}) }}">show</a>
                    <a href="{{ path('pharmacie_edit', {'id': pharmacie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pharmacie_new') }}">Create new</a>
{% endblock %}
